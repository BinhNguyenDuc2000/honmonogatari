  </div>
  <div class= "field">
    <%= form.label :chapter_order, "Chapter #:"%><br>
    <%= form.text_area :chapter_order%>
  </div>
  <div class= "field">
    <%= form.label :content, "Content:"%><br>
    <%= form.text_area :content%>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>