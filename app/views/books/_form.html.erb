<%= form_with model: @book do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %><br>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
  </div>
  
  <div>
    <%= form.label :category_id %><br>
    <!-- <%= form.text_area :category %><br> -->

  <%= form.select(:category_id, options_from_collection_for_select(@categories,:id, :category)) %>
  

  </div>
  
   <div class="field">
    <%= form.label :cover %><br>
    <%= form.file_field :cover %><br>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>